---
import "../styles/global.css";
import BaseLayout from '../layouts/BaseLayout.astro';

// For recent post (unfortunately still must do manually until I get better at this)
const recentTitle = "return of the obra dinn";
const recentDesc = "a truly thrilling mystery through time."
const recentURL = "/posts/return_of_the_obra_dinn";
